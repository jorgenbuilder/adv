# MapTiler API Key
# Get your key at https://www.maptiler.com/
NEXT_PUBLIC_MAPTILER_KEY=your_maptiler_key_here

# R2 Asset Configuration
# Set to "true" to use local assets from /public instead of R2
# Useful for development or when R2 is not available
NEXT_PUBLIC_USE_LOCAL_ASSETS=true

# Base URL for Cloudflare R2 bucket
# This should be the public R2 URL (e.g., https://pub-xxxxx.r2.dev)
# Or a custom domain if you've configured one
# Leave empty when using local assets
NEXT_PUBLIC_R2_BASE_URL=
